<?xml version="1.0" encoding="UTF-8"?>

<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">

	<persistence-unit name="Demo">
		<class>entity.User</class>
		<class>entity.UserBasicInfo</class>
		<class>entity.UserCommInfo</class>
		<class>entity.UserExtraInfo</class>
		<class>entity.Role</class>
		<class>entity.Greeting</class>
		<class>entity.Action</class>
		<class>entity.ActionUser</class>
		<class>entity.ActionTag</class>
		<class>entity.UserTag</class>
		<class>entity.Tag</class>
		<class>entity.CustomType</class>
		<class>entity.Attribute</class>
		<class>entity.AttributeValue</class>
		<class>entity.Comment</class>
		<class>entity.Post</class>
		<class>entity.Session</class>
		<class>entity.UserRecommendation</class>
		<class>entity.ActionRecommendation</class>
		<class>entity.Friendship</class>
		<class>entity.ActionInvitation</class>
		<class>entity.Notification</class>
		<properties>
			<property name="javax.persistence.jdbc.user" value="root" />
<!-- 			<property name="javax.persistence.jdbc.password" value="password" /> -->
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.hbm2ddl.auto" value="update" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5InnoDBDialect" />
		</properties>

	</persistence-unit>

</persistence>
